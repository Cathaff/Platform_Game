<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/virtual_joystick">

    <!-- Joystick container (left side) -->

    <FrameLayout
        android:id="@+id/joystick_region"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/joystick_base"
            android:layout_width="112dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="@drawable/joystick_base"
            android:elevation="1dp" />

        <View
            android:id="@+id/joystick_stick"
            android:layout_width="44dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/joystick_stick"
            android:elevation="2dp" />
    </FrameLayout>

    <!-- Joystick container (right side) -->

    <FrameLayout
        android:id="@+id/button_region"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp">

        <View
            android:id="@+id/action_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/action_button" />
    </FrameLayout>

</RelativeLayout>